{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
  <div class="row">
    {% for article in articles %}
    <div class="card bg-secondary mb-3" style="max-width: 18rem; margin:10px">
      <div class="card-header">
        <h5 class="card-title">{{ article.title }}</h5>
        <p class="date">Ajouté le {{ article.createdAt | date("d/m/Y")}}</p>
      </div>
      <img class="card-img-top" src="{{ article.image}}" alt="{{ article.title }}">
      <div class="card-body">
        <a href="{{ path('app_accueil_show', {'id':article.id})}}" class="btn btn-primary">Détail</a>
      </div>
      <div class="card-footer text-muted">
        Auteur : {{article.writeBy.name}}
      </div>
      <div class="card-footer text-muted">
        Categorie : {% for element in article.category %}{{element.title}}{% endfor %}
      </div>
      
    </div>
    {% endfor %}
  </div>
{% endblock %}
