{% extends 'base.html.twig' %}
{% block body %}
    <div class="card bg-secondary mb-3" style="max-width: 20rem;">
        <div class="card-header">{{categorie.title}}</div>
        <div class="card-body">
            <div class="d-block user-select-none" >
                <img src="{{categorie.image}}" alt="{{categorie.title}}" width="100%" height="200">
            </div>
        <p class="card-text">{{categorie.description}}</p>
        <p class="card-text">Ajout√© le : {{categorie.createdAt | date("d/m/Y")}}</p>
        </div>
    </div>
    {% for article in categorie.articles %}
        <p class="card-text" style="margin-left:10px"><a href="/show/{{article.id}}">{{article.title}}</a></p>
    {% endfor %}
{% endblock %}